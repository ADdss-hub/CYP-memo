shamefully-hoist=true
strict-peer-dependencies=false
ignore-scripts=false
auto-install-peers=true
engine-strict=true
save-exact=true

# 优先使用预构建二进制，避免源码编译
npm_config_build_from_source=false

# NPM 镜像 (淘宝源)
registry=https://registry.npmmirror.com/

# Electron 镜像 (npmmirror)
electron_mirror=https://npmmirror.com/mirrors/electron/
electron_builder_binaries_mirror=https://npmmirror.com/mirrors/electron-builder-binaries/

# Node.js 原生模块镜像
disturl=https://npmmirror.com/mirrors/node/

# better-sqlite3 (GitHub 官方，CI 环境访问快)
better_sqlite3_binary_host=https://github.com/WiseLibs/better-sqlite3/releases/download

# keytar 镜像 (GitHub 官方)
keytar_binary_host=https://github.com/atom/node-keytar/releases/download

# sharp 镜像 (npmmirror)
sharp_binary_host=https://npmmirror.com/mirrors/sharp/
sharp_libvips_binary_host=https://npmmirror.com/mirrors/sharp-libvips/
