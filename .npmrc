shamefully-hoist=true
strict-peer-dependencies=false
ignore-scripts=false
auto-install-peers=true
engine-strict=true
save-exact=true

# 优先使用预构建二进制，避免源码编译
npm_config_build_from_source=false

# 使用阿里云镜像
registry=https://registry.npmmirror.com/

# Electron 镜像 (阿里云)
electron_mirror=https://mirrors.aliyun.com/electron/
electron_builder_binaries_mirror=https://mirrors.aliyun.com/electron-builder-binaries/

# Node.js 原生模块镜像 (阿里云)
disturl=https://mirrors.aliyun.com/nodejs-release/

# better-sqlite3 (阿里云)
better_sqlite3_binary_host=https://mirrors.aliyun.com/better-sqlite3/

# keytar 镜像 (阿里云)
keytar_binary_host=https://mirrors.aliyun.com/keytar/

# sharp 镜像 (阿里云)
sharp_binary_host=https://mirrors.aliyun.com/sharp/
sharp_libvips_binary_host=https://mirrors.aliyun.com/sharp-libvips/
