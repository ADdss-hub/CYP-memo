{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@renderer/*": ["./src/renderer/*"],
      "@shared/*": ["../shared/src/*"],
      "@app/*": ["../app/src/*"],
      "@app-components/*": ["../app/src/components/*"],
      "@app-views/*": ["../app/src/views/*"],
      "@app-stores/*": ["../app/src/stores/*"],
      "@app-router/*": ["../app/src/router/*"],
      "@app-composables/*": ["../app/src/composables/*"]
    },
    "types": ["vite/client", "node"],
    "typeRoots": ["./src/renderer/types", "./node_modules/@types"]
  },
  "include": [
    "src/renderer/**/*.ts", 
    "src/renderer/**/*.vue", 
    "src/renderer/**/*.d.ts",
    "src/shared/**/*.ts",
    "../app/src/**/*.ts",
    "../app/src/**/*.vue"
  ],
  "exclude": ["node_modules", "dist"]
}
